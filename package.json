  "bugs": {
    "url": "https://github.com/searsaw/galileo-thermometer/issues"
  },
  "homepage": "https://github.com/searsaw/galileo-thermometer#readme",
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "concurrently": "^2.2.0",
    "eslint": "^3.0.1",
    "eslint-config-airbnb-base": "^4.0.0",
    "eslint-plugin-import": "^1.10.2",
    "lite-server": "^2.2.2",
    "watchify": "^3.7.0"
  }
