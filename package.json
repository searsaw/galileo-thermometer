{
  "name": "galileo-thermometer",
  "version": "1.0.0",
  "description": "A Galileo Thermometer online",
  "main": "index.js",
  "scripts": {
    "build": "browserify -t babelify src/app.js > build/app.bundle.js",
    "watch": "watchify -t babelify src/app.js -o build/app.bundle.js",
    "serve": "lite-server",
    "dev": "concurrently \"npm run watch\" \"npm run serve\""
